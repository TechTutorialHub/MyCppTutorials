#include <iostream> 
using namespace std; 
int main() { 
    int number; 
    cout << "Enter numbers (0 to stop, negative numbers are skipped):" << endl; 
    while (true) { 
        cout << "Enter a number: "; 
        cin >> number; 
        if (number < 0) { 
            cout << "Negative number skipped." << endl; 
            continue; // Skip negative numbers 
        } 

        if (number == 0) { 
            cout << "Zero entered. Stopping the loop." << endl; 
            break; // Stop the loop if the user enters 0 
        } 

        cout << "You entered: " << number << endl; 

    } 
    return 0; 
} 
